@using TransportFormASP.Models;
@model TransportationRequest
@{
    ViewBag.Title = "Create"; //Auto
}

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <p>Тип перевозки: </p>
                @Html.DropDownList("idTranshipmentMethod", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Период перевозки: </p>
                <select class="form-control filter-select" table="4" column="DateMonth1" name="idDateMonth"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна отправления: </p>
                @*@Html.DropDownList("idRefBookLandFrom", null, htmlAttributes: new { @class = "form-control filter-select", table = "2", column = "LName", name = "idRefBookLand" })*@
                <select class="form-control filter-select" table="2" column="LName" name="idRefBookLand"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна назначения: </p>
                @*@Html.DropDownList("idRefBookLandFrom", null, htmlAttributes: new { @class = "form-control" })*@
                <select class="form-control filter-select" table="2" column="LName" name="idRefBookLand"></select>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Назад к списку", "Index")
</div>







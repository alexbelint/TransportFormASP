@model TransportFormASP.Models.TransportationRequest
@{
    ViewBag.Title = "Создание заявки";
}
<br />
<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <p>Период перевозки: </p>
                <select class="form-control filter-select" table="4" column="DateMonth1"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна отправления: </p>
                <select class="form-control filter-select" table="2" column="LName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна назначения: </p>
                <select class="form-control filter-select" table="2" column="LName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>GNG: </p>
                <select class="form-control filter-select" table="0" column="Name"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>ETSNG: </p>
                <select class="form-control filter-select" table="1" column="Name"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Станция отправления: </p>
                <select class="form-control filter-select" table="3" column="NewName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Станция назначения: </p>
                <select class="form-control filter-select" table="3" column="NewName"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <p>Грузоотправитель: </p>
                <select class="form-control filter-select" table="5" column="ShortName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Грузополучатель: </p>
                <select class="form-control filter-select" table="5" column="ShortName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Вид отправки: </p>
                <select class="form-control filter-select" table="7" column="DispatchType"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Род подвижного соства: </p>
                <select class="form-control filter-select" table="8" column="Name"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Принадлежность подвижного состава: </p>
                <select class="form-control filter-select" table="9" column="OwnerDsc"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Вес груза: </p>
                <input class="form-control" placeholder="Укажите вес перевозимого груза" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Объем, количество: </p>
                <input class="form-control" placeholder="Укажите количество вагонов/контейнеров" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Номера вагонов/контейнеров: </p>
                <select class="form-control filter-select" table="10" column="CargoUnitNumber1"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Особые условия по доставке: </p>
                <select class="form-control filter-select" table="6" column="SpecialCondition1"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Примечание: </p>
                <input class="form-control" placeholder="Введите примечание" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

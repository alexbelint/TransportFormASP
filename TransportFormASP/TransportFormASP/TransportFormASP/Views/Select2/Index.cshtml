@model TransportFormASP.Models.TransportationRequest
@{
    ViewBag.Title = "Index";
}
<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <p>Период перевозки: </p>
                <select class="form-control filter-select" table="4" column="DateMonth1"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна отправления: </p>
                <select class="form-control filter-select" table="2" column="LName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Страна назначения: </p>
                <select class="form-control filter-select" table="2" column="LName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>GNG: </p>
                <select class="form-control filter-select" table="0" column="Name"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>ETSNG: </p>
                <select class="form-control filter-select" table="1" column="Name"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Пункт отправления: </p>
                <input class="form-control" placeholder="Введите пункт отправления" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Пункт назначения: </p>
                <input class="form-control" placeholder="Введите пункт назначения" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Грузоотправитель: </p>
                <select class="form-control filter-select" table="5" column="ShortName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Грузополучатель: </p>
                <select class="form-control filter-select" table="5" column="ShortName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Вес груза: </p>
                <input class="form-control" placeholder="Введите вес перевозимого груза" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Грузополучатель: </p>
                <select class="form-control filter-select" table="5" column="ShortName"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Особые условия по доставке: </p>
                <select class="form-control filter-select" table="6" column="SpecialCondition1"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

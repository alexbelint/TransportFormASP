@model PagedList.IPagedList<TransportFormASP.Models.TransportationRequest>
@using PagedList.Mvc

@{
    ViewBag.Title = "Железнодорожные перевозки";
}
<br />
<h4>Все заявки.</h4>

<br />
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].DateMonth.DateMonth1).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].idRefBookLandFrom).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].idRefBookLandTo).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].RefBookGNG.Kod).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].RefBookETSNG.Kod).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].RefBookStationFrom).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].RefBookStationTo).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].Shipper).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].Consignee).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].idRailwayDispatch).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].idRefBookCars).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].idRefBookOwner).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].Weight).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].CargoUnitAmmount).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].CargoUnitNumber1).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].SpecialCondition.SpecialCondition1).ToHtmlString(), "Index")
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => Model[0].Note).ToHtmlString(), "Index")
        </th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateMonth.DateMonth1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookLand.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookLand1.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookGNG.Kod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookETSNG.Kod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookStations.NewName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookStations.NewName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookClient.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookClient1.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RailwayDispatch.DispatchType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookCars.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefBookOwner.OwnerDsc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoUnitAmmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoUnitNumber1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialCondition.SpecialCondition1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
        </tr>
    }

</table>
<div>
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>